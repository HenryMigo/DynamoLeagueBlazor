@if(_result is null)
{
    <MudSkeleton SkeletonType="SkeletonType.Text" Width="100%" Height="50px"/>
    <MudAvatarGroup Max="5" Spacing="5">
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="75px" Height="75px" />
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="75px" Height="75px" />
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="75px" Height="75px" />
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="75px" Height="75px" />
    </MudAvatarGroup>
}
else
{
    <h1>Top Offenders</h1>
    @if(_result.Players.Count() > 2)
    {
        var firstPlayer = _result.Players.First();

        <MudAvatarGroup Max="5" Spacing="2" Class="align-center">
            <MudAvatar Image=@firstPlayer.PlayerHeadShotUrl Size=Size.Large />
            @foreach(var player in _result.Players.Skip(1))
            {
                <MudAvatar Image=@player.PlayerHeadShotUrl />
            }  
        </MudAvatarGroup>
    }
    else
    {
        <MudAlert Severity=Severity.Normal>
            There aren't enough players with fines quite yet. Check back later!
        </MudAlert>
    }
}
