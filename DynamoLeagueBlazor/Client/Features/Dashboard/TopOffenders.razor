@if(_result is null)
{
    <MudSkeleton SkeletonType="SkeletonType.Text" Width="100%" Height="50px"/>
    <MudAvatarGroup Max="5" Spacing="5">
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="75px" Height="75px" />
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="75px" Height="75px" />
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="75px" Height="75px" />
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="75px" Height="75px" />
    </MudAvatarGroup>
}
else
{
    <MudGrid>
        <MudItem>
            <MudText Typo=Typo.h3>
                Top Offenders
            </MudText>
        </MudItem>

        @if(_result.Players.Count() > 1)
        {
            <MudItem xs=12 lg=6>
                @{
                    var firstPlayer = _result.Players.First();
                }
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Image=@firstPlayer.PlayerHeadShotUrl></MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.body1">@firstPlayer.PlayerName</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudText Typo="Typo.h3" Color=Color.Success>@firstPlayer.TotalFineAmount</MudText>
                        </CardHeaderActions>
                    </MudCardHeader>
                </MudCard>
            </MudItem>
            <MudItem xs=12 lg=6>
                @foreach(var player in _result.Players.Skip(1))
                {
                    <MudCard >
                        <MudCardHeader>
                            <CardHeaderAvatar>
                                <MudAvatar Image=@player.PlayerHeadShotUrl></MudAvatar>
                            </CardHeaderAvatar>
                            <CardHeaderContent>
                                <MudText Typo="Typo.body1">@player.PlayerName</MudText>
                            </CardHeaderContent>
                            <CardHeaderActions>
                                <MudText Typo="Typo.h5" Color=Color.Success>@player.TotalFineAmount</MudText>
                            </CardHeaderActions>
                        </MudCardHeader>
                    </MudCard>
                }
            </MudItem>
        }
        else
        {
            <MudAlert Severity=Severity.Normal>
                There aren't enough players with fines quite yet. Check back later!
            </MudAlert>
        }
    </MudGrid>
}
