@page "/players/list"
@using static DynamoLeagueBlazor.Shared.Features.Players.GetPlayerListResult

<h1>
    Player Lookup
</h1>

<MudTable Items="_result.Players" Breakpoint="Breakpoint.Sm" Dense=true Loading=_loading RowsPerPage=10>
    <HeaderContent>
        <MudTh>@nameof(PlayerItem.Name)</MudTh>
        <MudTh>@nameof(PlayerItem.Position)</MudTh>
        <MudTh>@nameof(PlayerItem.Team)</MudTh>
        <MudTh>Contract Value</MudTh>
        <MudTh>Contract Length</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Name</MudTd>
        <MudTd>@context.Position</MudTd>
        <MudTd>@context.Team</MudTd>
        <MudTd>@context.ContractValue</MudTd>
        <MudTd>@context.ContractLength</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>